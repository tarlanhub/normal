
	<div class="press__wrapper">
        <span class="press__wrapper-title">{{ section.settings.title }} </span>
        <span class="press__wrapper-sub-title"> {{ section.settings.sub_title }}</span>
	<div class="press__wrapper--block">
		{% for block in section.blocks %}
           <a href="{{ block.settings.url }}"class="press__inner--block">
              <img class= "press__inner--block__img" src={{ block.settings.image | img_url : "255x150" }}>
          <span class="press_inner--block__heading">{{ block.settings.heading }} </span>
            <span class="press_inner--block__content">{{ block.settings.content }}</span>
            <span  style="
    padding-bottom: 30px;
    display: block;
    padding-right: 90px;
    font-size:18px;
" href="{{ block.settings.url }}">{{ block.settings.url_text }} </span>
           </a>
        {% endfor %}   
    </div>
	</div>

<style>
.press__wrapper {
    padding: 0 20px;
}
.press__wrapper-title {
    display: block;
    text-align: center;
    font-weight: 800;
    font-size: 65px;
    padding-top: 50px;
    line-height: 100%;
    padding-bottom: 20px;
}
.press__wrapper-sub-title {
    display: block;
    text-align: center;
    font-weight: 500;
    font-size: 21px;
    line-height: 120%;
    padding-bottom: 60px;
}
.press__wrapper--block {
    display: flex;
    flex-wrap: wrap;
    max-width: 1320px;
    padding-bottom: 130px;
    margin: 0 auto;
    gap: 20px;
    justify-content: space-between;
}
.press__inner--block {
    flex: 1 2 30%;
    background: white;
    border-radius: 10px;
    width: 100%;
    padding-left: 32px;
    padding-right: 32px;
    height: 100%;
    filter: drop-shadow(0px 4px 14px rgba(127, 63, 88, 0.1));
}
  .press__inner--block__img{
   margin: 0 auto;
    display: flex;
    padding: 40px;
    width: 100%;
    height: 100%;
    min-height: 364px;
    object-fit: contain;

  }
   .press_inner--block__content{
    font-weight:800;
     font-size:17px;
  }
  span.press_inner--block__heading {
    border-top: 1px solid #5b1d3d42;
    display: block;
    padding-top: 25px;
    padding-bottom:15px;
    font-size:18px;
    padding-right: 32px;
}

  </style>
{% schema %}
  {
    "name": "Press",
    "settings": [
     {
        "type": "text",
        "id": "title",
        "label": "Section Title"
      }, 
       {
        "type": "text",
        "id": "sub_title",
        "label": "Sub Title"
      }
    ],
    "blocks": [
			{
				"type": "block",
				"name": "block",
				"settings": [
				   {
                      "type": "image_picker",
                      "id": "image",
                      "label": "Image"
                   }, 
				   {
                      "type": "text",
                      "id": "heading",
                      "label": "Heading"
                   },
                  {
                      "type": "richtext",
                      "id": "content",
                      "label": "Content"
                   }, 
				   {
					  "type": "url",
					  "id": "url",
					  "label": "URL"
				   },
                   {
					  "type": "text",
					  "id": "url_text",
					  "label": "Url Text"
				   }
				]
			}
    ],    
     "presets": [
      {
        "name": "Press",
        "category": "Sections"
      }
    ]
  }
{% endschema %}
